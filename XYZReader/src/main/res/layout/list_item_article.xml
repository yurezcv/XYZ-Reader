<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_side_margin"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_item_text_padding">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/photo_placeholder"
            android:cropToPadding="false"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/article_title"
            style="@style/ListItemTitle"
            android:maxLines="4"
            android:textColor="@color/theme_text_color"
            tools:text="Sample Article Title for Preview in the Design Editor" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/ListItemText"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="2"
            android:textColor="@color/theme_secondary_text_color"
            tools:text="Jan 1, 1912 by Jack London" />
    </LinearLayout>

</android.support.v7.widget.CardView>
