<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="ListItemText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/list_item_text_padding</item>
        <item name="android:paddingRight">@dimen/list_item_text_padding</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemTitle" parent="ListItemText">
        <item name="android:layout_marginBottom">@dimen/list_title_margin</item>
        <item name="android:paddingTop">@dimen/list_item_text_padding</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/theme_primary</item>
        <item name="android:textColor">@color/theme_text_color_light</item>
    </style>

</resources>
